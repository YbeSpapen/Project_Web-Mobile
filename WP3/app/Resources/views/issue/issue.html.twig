{% extends 'base.html.twig' %}
{% block title %}Issue {% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1>Describe your problem</h1>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                {{ form_start(form) }}
                <div class="form_group">
                    {{ form_row(form.problem, {'attr': {'class': 'form-control'}}) }}
                </div>
                <br>
                <br>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-btn fa-user"></i> Send
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
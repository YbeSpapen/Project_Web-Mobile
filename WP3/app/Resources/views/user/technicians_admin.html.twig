{% extends 'base.html.twig' %}


{% block body %}
    <div class="container-fluid">
        <h1>Technicians</h1>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
            </thead>
            <tbody>
            {% for technician in technicians %}
                <tr>
                    <th scope="row">{{ technician.id }}</th>
                    <td>{{ technician.name }}</td>
                    <td>{{ technician.email }}</td>
                    <td>
                        <div class="pull-right">
                            <a href="{{ path('editTechnician', {'technicianId': technician.id}) }}"
                               class="btn btn-space btn-sm btn-primary" role="button">Edit</a>
                            <a href="{{ path('removeTechnician', {'technicianId': technician.id}) }}"
                               class="btn btn-space btn-sm btn-danger" role="button">Delete</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('adminRegisterTechnician') }}"
           class="btn btn-sm btn-space btn-primary" role="button">Create technician</a>
    </div>
{% endblock %}
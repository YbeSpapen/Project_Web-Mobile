{% extends 'base.html.twig' %}


{% block navbarItems %}
    <ul class="nav navbar-nav mr-auto">
        <li class="nav-item">
            <a href="/" class="nav-link">Home</a>
        </li>
    </ul>
{% endblock %}
{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1>Beschrijf het probleem</h1>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                {{ form_start(form) }}
                <div class="form_group">
                    {{ form_row(form.problem, {'attr': {'class': 'form-control'}}) }}
                </div>
                <br>
                <br>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-btn fa-user"></i> Verzend
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
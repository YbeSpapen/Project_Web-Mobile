{% extends 'base.html.twig' %}


{% block navbarItems %}
    <ul class="nav navbar-nav mr-auto">
        <li class="nav-item active">
            <a href="/" class="nav-link">Home</a>
        </li>
    </ul>
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <h1>Welcome
            {% if app.user != null %}
                {{ app.user.name }}
            {% endif %}
        </h1>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Locatie</th>
            </tr>
            </thead>
            <tbody>
            {% for location in locations %}
                <tr>
                    <th scope="row">{{ location.getId() }}</th>
                    <td>{{ location.getName() }}</td>
                    <td><a href="/status?locatieId={{ location.getId }}" class="btn btn-primary pull-right"
                           role="button">Geef status</a></td>
                    <td><a href="/issue?locatieId={{ location.getId }}" class="btn btn-primary pull-right"
                           role="button">Beoordeel</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}